<div class="lecture-edit-form">
    <br/>
    <div class="jumbotron">
        <form name="lectureEdit" method="post">
            <div class="form-group">
                <label for="name">Название лекции</label>
                <input type="text" class="form-control" id="name" name="name" value="{{name}}" />
            </div>
            <div class="form-group">
                <label for="lecturer">Имя лектора</label>
                <input type="text" class="form-control" id="lecturer" name="lecturer" value="{{lecturer}}" />
            </div>
            <div class="form-group">
                <label for="date">Дата</label>
                <input type="date" class="form-control" id="date" name="date" value="{{date}}" placeholder="Например, 2017-05-12" />
            </div>
            <div class="form-group">
                <label for="start">Время начала</label>
                <input type="time" class="form-control" id="start" name="start" value="{{startTime}}" placeholder="Например, 17:00" />
            </div>
            <div class="form-group">
                <label for="finish">Время окончания</label>
                <input type="time" class="form-control" id="finish" name="finish" value="{{finishTime}}" placeholder="Например, 19:30" />
            </div>
            <div class="form-group">
                <label for="school">Школа</label>
                <select name="school" multiple size="4" class="form-control" id="school">
                    {{#each schoolList}}
                        <option value="{{_id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="classroom">Аудитория</label>
                <select name="classroom" class="form-control" id="classroom">
                    {{#each classroomList}}
                        <option value="{{_id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <input type="hidden" name="id" value="{{_id}}" />
            <button name="save" type="submit" class="btn btn-primary lecture-save">Сохранить</button>
            <button type="button" class="btn btn-secondary lecture-edit-cancel">Отменить</button>
        </form>
    </div>
</div>