<div class="school-edit-form">
    <br/>
    <div class="jumbotron">
        <form name="schoolEdit" method="post">
            <div class="form-group">
                <label for="name">Название школы</label>
                <input type="text" class="form-control" id="name" name="name" value="{{name}}" />
            </div>
            <div class="form-group">
                <label for="count">Количество студентов</label>
                <input type="text" class="form-control" id="count" name="count" value="{{count}}" />
            </div>
            <input type="hidden" name="id" value="{{_id}}" />
            <button type="submit" name="save" class="btn btn-primary school-save">Сохранить</button>
            <button type="button" class="btn btn-secondary school-edit-cancel">Отменить</button>
        </form>
    </div>
</div>